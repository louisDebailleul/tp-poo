{% extends 'layout.twig' %}

{% block title meeting.nom %}

{% block body %}

<h1>{{ meeting.titre }}</h1>
<br>
    <ul class="list-group">
        <li class="list-group-item">Organisateur : {{ meeting.prenom }} {{ meeting.nom }}</li>
        <li class="list-group-item">Mail : {{ meeting.email }}</li>
        <li class="list-group-item">Date debut : {{ meeting.dateD }}</li>
        <li class="list-group-item">Date fin : {{ meeting.dateF }}</li>
    </ul>
    <br>
    <h3>Descriptif</h3>
    <hr>
    <p>{{ meeting.descriptif }}</p>
    <br>
    <h3>Participent</h3>
    <hr>
    <ul class="list-group">
    {% for participent in participents %}

            <li class="list-group-item"> {{ participent.prenom }} {{ participent.nom }}</li>

    {% endfor %}
    </ul>
{% endblock %}